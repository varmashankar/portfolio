@{
    Layout = "~/Views/Shared/_Layout.cshtml"; // Specify the layout page
    ViewData["Title"] = "About Me";
}
<!-- About Me Section -->
<section>
    <div id="about-me" class="container about-me-section">
        <div class="row align-items-center">
            <!-- Profile Image -->
            <div class="col-md-4 text-center">
                <div class="profile-image-wrapper">
                    <img src="~/img/meportrait.png" class="profile-image" alt="Your Profile Picture">
                </div>
            </div>
            <!-- About Me Content -->
            <div class="col-md-8">
                <h1 class="aboutme-section-title mb-4 text-left">About Me</h1>
                <p class="lead-text mb-3">
                    Hello! I'm a passionate Full-Stack Developer dedicated to creating dynamic and user-centric web applications.
                    I thrive on solving problems, designing engaging experiences, and constantly learning new technologies to enhance my skills.
                </p>
                <p class="body-text mb-3">
                    With expertise in ASP.NET MVC and MongoDB, I specialize in building responsive websites that combine functionality with seamless design.
                    Currently, I'm working on my portfolio to showcase my projects and technical skills.
                </p>
                <p class="body-text mb-4">
                    In my free time, I love experimenting with animations (like GSAP!) and exploring modern web design trends.
                    Let's build something amazing together!
                </p>
                <div class="button-group">
                    <a href="/Home/Contact/" class="btn me-3 button-23">Get in Touch</a>
                    <a href="/Home/Resume/" class="btn button-31">Download Resume</a>
                </div>
            </div>
        </div>
        </div>

    <!-- Hobbies and Interests Section -->
    <div class="container hobbies-section mt-3">
        <h2 class="hobbies-title mb-4 text-center">Hobbies & Interests</h2>
        <ul class="hobbies-list list-inline">
            <li class="hobby-item list-inline-item">
                <span class="hobby-icon">
                    <i class="fas fa-code"></i>
                </span> Coding
            </li>
            <li class="hobby-item list-inline-item">
                <span class="hobby-icon">
                    <i class="fas fa-music"></i>
                </span> Music
            </li>
            <li class="hobby-item list-inline-item">
                <span class="hobby-icon">
                    <i class="fas fa-book"></i>
                </span> Reading
            </li>
            <li class="hobby-item list-inline-item">
                <span class="hobby-icon">
                    <i class="fas fa-gamepad"></i>
                </span> Gaming
            </li>
        </ul>
    </div>

    
    <!-- Key Skills Section -->
    <div class="container key-skills-section mt-3">
        <h2 class="skills-title mb-4 text-center">Key Skills</h2>
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="skill-card">
                    <h5>ASP.NET</h5>
                    <div class="progress-container">
                        <div class="progress-bar-wrapper">
                            <div class="progress-bar bg-primary" style="width: 90%;"></div>
                        </div>
                        <div class="percentage text-center">90%</div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="skill-card">
                    <h5>MySQL</h5>
                    <div class="progress-container">
                        <div class="progress-bar-wrapper">
                            <div class="progress-bar bg-primary" style="width: 80%;"></div>
                        </div>
                        <div class="percentage text-center">80%</div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="skill-card">
                    <h5>JavaScript</h5>
                    <div class="progress-container">
                        <div class="progress-bar-wrapper">
                            <div class="progress-bar bg-primary" style="width: 85%;"></div>
                        </div>
                        <div class="percentage text-center">85%</div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="skill-card">
                    <h5>Bootstrap</h5>
                    <div class="progress-container">
                        <div class="progress-bar-wrapper">
                            <div class="progress-bar bg-primary" style="width: 75%;"></div>
                        </div>
                        <div class="percentage text-center">75%</div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="skill-card">
                    <h5>MongoDB</h5>
                    <div class="progress-container">
                        <div class="progress-bar-wrapper">
                            <div class="progress-bar bg-primary" style="width: 50%;"></div>
                        </div>
                        <div class="percentage text-center">50%</div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="skill-card">
                    <h5>Node.Js</h5>
                    <div class="progress-container">
                        <div class="progress-bar-wrapper">
                            <div class="progress-bar bg-primary" style="width: 60%;"></div>
                        </div>
                        <div class="percentage text-center">60%</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <section id="my-journey" class="container py-5 mt-3">
        <h2 class="skills-title mb-4 text-center">My Journey</h2>
        <div class="container py-5">
            <div class="main-timeline-5">
                <div class="timeline-5 right-5">
                    <div class="card">
                        <div class="card-body p-4">
                            <h5>My Journey Begins: Learning the Basics</h5>
                            <span class="small text-muted"><i class="fas fa-clock me-1"></i>January 2022</span>
                            <p class="mt-2 mb-0">Started my journey as a web developer, learning HTML, CSS, and JavaScript. Built small static websites to practice front-end development.</p>
                        </div>
                    </div>
                </div>
                <div class="timeline-5 right-5">
                    <div class="card">
                        <div class="card-body p-4">
                            <h5>Introduction to Full-Stack Development</h5>
                            <span class="small text-muted"><i class="fas fa-clock me-1"></i>June 2022</span>
                            <p class="mt-2">Delved deeper into full-stack development, learning about server-side technologies like Node.js and databases like MongoDB. Started building dynamic web applications.</p>
                            <p class="mb-0">Experimented with frameworks like Express.js and Bootstrap, creating responsive and scalable web applications for personal projects.</p>
                        </div>
                    </div>
                </div>
                <div class="timeline-5 right-5">
                    <div class="card">
                        <div class="card-body p-4">
                            <h5>Working with ASP.NET MVC</h5>
                            <span class="small text-muted"><i class="fas fa-clock me-1"></i>September 2023</span>
                            <p class="mt-2 mb-0">Started working with ASP.NET MVC for more structured, scalable web application development. Began integrating MongoDB for backend storage.</p>
                        </div>
                    </div>
                </div>
                <div class="timeline-5 right-5">
                    <div class="card">
                        <div class="card-body p-4">
                            <h5>Building My Portfolio Website</h5>
                            <span class="small text-muted"><i class="fas fa-clock me-1"></i>December 2024</span>
                            <p class="mt-2">Focused on building my personal portfolio website using the latest web technologies. Implemented animations with GSAP and responsive design with Bootstrap.</p>
                            <p class="mb-0">Showcased my skills in full-stack development, including my work with MongoDB, ASP.NET MVC, and modern web design principles.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


    
</section>
