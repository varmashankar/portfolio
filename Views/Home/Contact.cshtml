@{
    Layout = "~/Views/Shared/_Layout.cshtml"; // Specify the layout page
    ViewData["Title"] = "Contact Me";
}

<section id="contact" class="container py-5 text-white">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h2 class="text-center mb-4">Get in Touch</h2>
            <p class="text-center mb-5">If you're interested in working together or have any questions, feel free to reach out!</p>
            <div class="social-links text-center mt-3">
                <a href="https://linkedin.com" target="_blank" class="btn btn-outline-light mx-2 linkedin"><i class="fab fa-linkedin"></i> LinkedIn</a>
                <a href="https://github.com" target="_blank" class="btn btn-outline-light mx-2 github"><i class="fab fa-github"></i> GitHub</a>
            </div>
            <form action="/submit" method="POST" class="p-4">
                <div class="form-group mb-3">
                    <label for="name" class="text-white">Your Name</label>
                    <input type="text" id="name" name="name" class="form-control" placeholder="Enter your name" required>
                </div>
                <div class="form-group mb-3">
                    <label for="email" class="text-white">Your Email</label>
                    <input type="email" id="email" name="email" class="form-control" placeholder="Enter your email" required>
                </div>
                <div class="form-group mb-3">
                    <label for="subject" class="text-white">What you want to talk about?</label>
                    <input type="text" id="subject" name="subject" class="form-control" placeholder="Subject" required>
                </div>
                <div class="form-group mb-3">
                    <label for="message" class="text-white">Message</label>
                    <textarea id="message" name="message" class="form-control" rows="4" placeholder="Your message..." required></textarea>
                </div>
                <button type="submit" class="btn btn-primary w-100 py-2 mt-3">Send Message</button>
            </form>
        </div>
    </div>
</section>

