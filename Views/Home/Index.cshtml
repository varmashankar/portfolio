@{
    ViewData["Title"] = "Home Page";
}

<div class="mt-3">
    <!-- Hero Section -->
    <section id="hero" class="container hero text-center py-5">
        <div class="row align-items-center">
            <!-- Text Content -->
            <div class="col-md-8">
                <p class="lead mt-2" id="hero-description">
                    <span id="typed-text"></span><span class="cursor">|</span>
                </p>
                <h1 class="display-4" id="hero-title">Hi, I'm @ViewBag.Name</h1>
                <div class="mt-5">
                    <a href="/Home/Projects" class="btn button-23 btn-lg me-2" id="btn-projects">View My Projects</a>
                    <a href="/Home/Resume/" class="btn button-31 btn-lg" id="btn-resume">Download Resume</a>
                </div>
            </div>
            <!-- Self Portrait Image -->
            <div class="col-md-4">
                <div class="portrait-container">
                    <img id="portrait" src="~/img/meportrait1.png" class="img-fluid" alt="My Portrait">
                    <div class="portrait-overlay">
                        <p class="portrait-overlay-text">Good Looking Guy!</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="about-skills" class="container mt-5">
        <div class="row align-items-center">
            <!-- About Me Section -->
            <div class="col-12 col-md-6 about-section mb-4 mb-lg-0" data-aos="fade-up" data-aos-anchor-placement="top-bottom">
                <h2 class="section-title text-white mb-3">About Me!</h2>
                <p>
                    I am a dedicated Full-Stack Developer specializing in building robust, scalable, and responsive web applications. </p>
                <p>
                    With a keen eye for detail and a strong focus on user experience, I thrive on solving complex problems and
                    delivering innovative solutions.
                </p>
                <p>    I continuously strive to enhance my skills by exploring emerging technologies
                    and staying updated on industry trends to ensure top-notch quality in every project.
                </p>
            </div>

            <!-- Skills Section -->
            <div class="col-12 col-md-6 skills-section" data-aos="fade-up" data-aos-delay="200" data-aos-anchor-placement="top-bottom">
                <h2 class="section-title text-white mb-4" style="font-size: 1.8rem;">My Skills</h2>
                <div class="row">
                    <!-- Frontend Skills -->
                    <div class="col-12 col-md-4 mb-3" data-aos="fade-up" data-aos-delay="400" data-aos-anchor-placement="top-bottom">
                        <div class="skill-category">
                            <h3 class="category-title text-white" style="font-size: 1.2rem;">Frontend</h3>
                            <div class="skills-grid" style="font-size: 0.8rem;">
                                <div class="skill-item">
                                    <i class="fab fa-html5"></i>
                                    <p>HTML5</p>
                                </div>
                                <div class="skill-item">
                                    <i class="fab fa-css3-alt"></i>
                                    <p>CSS3</p>
                                </div>
                                <div class="skill-item">
                                    <i class="fab fa-js-square"></i>
                                    <p>JavaScript</p>
                                </div>
                                <div class="skill-item">
                                    <i class="fab fa-bootstrap"></i>
                                    <p>Bootstrap</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Backend Skills -->
                    <div class="col-12 col-md-4 mb-3" data-aos="fade-up" data-aos-delay="600" data-aos-anchor-placement="top-bottom">
                        <div class="skill-category">
                            <h3 class="category-title text-white" style="font-size: 1.2rem;">Backend</h3>
                            <div class="skills-grid" style="font-size: 0.8rem;">
                                <div class="skill-item">
                                    <i class="fab fa-node"></i>
                                    <p>Node.js</p>
                                </div>
                                <div class="skill-item">
                                    <i class="fas fa-database"></i>
                                    <p>MongoDB</p>
                                </div>
                                <div class="skill-item">
                                    <i class="fas fa-database"></i>
                                    <p>MSSQLServer</p>
                                </div>
                                <div class="skill-item">
                                    <i class="fas fa-cogs"></i>
                                    <p>ASP.NET</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Tools -->
                    <div class="col-12 col-md-4 mb-3" data-aos="fade-up" data-aos-delay="800" data-aos-anchor-placement="top-bottom">
                        <div class="skill-category">
                            <h3 class="category-title text-white" style="font-size: 1.2rem;">Tools</h3>
                            <div class="skills-grid" style="font-size: 0.8rem;">
                                <div class="skill-item">
                                    <i class="fab fa-git-alt"></i>
                                    <p>Git</p>
                                </div>
                                <div class="skill-item">
                                    <i class="fas fa-tools"></i>
                                    <p>VS Code</p>
                                </div>
                                <div class="skill-item">
                                    <i class="fas fa-cloud"></i>
                                    <p>Azure</p>
                                </div>
                                <div class="skill-item">
                                    <i class="fab fa-github"></i>
                                    <p>GitHub</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Projects -->
    <section id="projects" class="container projects mt-5 text-center" data-aos="fade-up">
        <div class="container">
            <h2 class="section-title" data-aos="fade-up" data-aos-delay="100">My Projects</h2>
            <div class="row mt-4 d-flex align-items-stretch">
                <div class="recent py-2" data-aos="fade-up" data-aos-delay="200">
                    <h4>Recent Projects</h4><hr />
                </div>

                <!-- Project 1 -->
                <div class="col-md-4" data-aos="fade-up" data-aos-delay="300">
                    <div class="project-card">
                        <div class="img-container" style="max-width: 150px; margin: 0 auto;">
                            <img src="~/img/sv_logo.png" alt="Project 1" class="img-fluid">
                        </div>
                        <h3 class="mt-3">E-Commerce Platform</h3>
                        <p>
                            This project is an e-commerce platform where users can browse, shop, and make secure payments.
                            Built with React and Node.js, it integrates Stripe for payment processing.
                        </p>
                        <a href="#" class="btn button-23">View Project</a>
                    </div>
                </div>

                <!-- Project 2 -->
                <div class="col-md-4" data-aos="fade-up" data-aos-delay="400">
                    <div class="project-card">
                        <div class="img-container" style="max-width: 150px; margin: 0 auto;">
                            <img src="~/img/sv_logo.png" alt="Project 2" class="img-fluid">
                        </div>
                        <h3 class="mt-3">Task Management App</h3>
                        <p>
                            A web application that allows users to create and manage tasks efficiently.
                            Built using Vue.js and Firebase for real-time data synchronization.
                        </p>
                        <a href="#" class="btn button-23">View Project</a>
                    </div>
                </div>

                <!-- Project 3 -->
                <div class="col-md-4" data-aos="fade-up" data-aos-delay="500">
                    <div class="project-card">
                        <div class="img-container" style="max-width: 150px; margin: 0 auto;">
                            <img src="~/img/sv_logo.png" alt="Project 3" class="img-fluid">
                        </div>
                        <h3 class="mt-3">Personal Portfolio Website</h3>
                        <p>
                            This is a personal portfolio website I built using ASP.NET MVC, MongoDB, and GSAP for smooth animations.
                            It showcases my work, skills, and projects in a user-friendly design.
                        </p>
                        <a href="#" class="btn button-23">View Project</a>
                    </div>
                </div>
            </div>

            <!-- View All Projects Button -->
            <div class="mt-5" data-aos="fade-up" data-aos-delay="400">
                <a href="/Home/Projects" class="btn button-31 btn-lg">View All Projects</a>
            </div>
        </div>
    </section>
</div>



